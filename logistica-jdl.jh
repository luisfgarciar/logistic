entity Product {
	name String required
}

entity ProductType {
    name String required,
    alias String required maxlength(3) pattern(/[A-Z]+/)
}

entity Provider {
    name String,
    address String,
    email String pattern(/^[^@\s]+@[^@\s]+\.[^@\s]+$/)  
}


relationship ManyToOne {
	Product{productType} to ProductType,
    Product{provider} to Provider,
}

// Set pagination options
paginate ProductType with infinite-scroll
paginate Product, ProductType with pagination